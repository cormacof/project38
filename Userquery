import controlP5.*;

ControlP5 cp5; 

String queryType = ""; 
String queryResult = ""; 

void setup() {
  size(400, 300);
  

  cp5 = new ControlP5(this);
  
 
  cp5.addDropdownList("queryType")
     .setPosition(20, 50)
     .setSize(200, 100)
     .setBarHeight(20)
     .setItemHeight(20)
     .addItems(new String[] {"flight date", "flight number", "flight origin", "flight terminal"});
     
 
  cp5.addButton("submitQuery")
     .setPosition(240, 50)
     .setSize(100, 20)
     .setLabel("submitQuery");
}

void draw() {
  background(200);
  
  
  fill(0);
  text(queryResult, 20, 120);
}


void submitQuery() {
  
  switch (queryType) {
    case "flight date":
      queryResult = "Execute the flight type and display the result";
      break;
    case "flight number":
      queryResult = "Execute the flight number and display the result";
      break;
    case "flight origin":
      queryResult = "Execute the flight origin and display the result";
      break;
    case "flight terminal":
      queryResult = "Execute the flight terminal and display the result";
      break;
    default:
      queryResult = "Please select an inquiry type";
      break;
  }
}


void controlEvent(ControlEvent event) {
  if (event.isGroup() && event.getName().equals("queryType")) {
  
    queryType = event.getGroup().getValueLabel().getText();
  }
}
